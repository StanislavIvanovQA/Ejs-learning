<%- include("partials/header"); -%>
    <h1>Home</h1>
    <p>
        <%= homeStartingContent %>
    </p>
    <% posts.forEach(element=> { %>
        <h1>
            <%= element.postTitle %>
        </h1>
        <% if(element.postBody.length < 100) { %>
            <p>
                <%= element.postBody %>
            </p>
            <% } else { %>
                <p>
                    <%= element.postBody.substring(0, 100) + "... "%> <a href="/posts/<%= element.postTitle %>">Read More</a>
                </p>
                <%} }); %>

                    <%- include("partials/footer"); -%>